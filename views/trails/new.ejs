<% include ../partials/header %>

	<div class="row justify-content-center">
		<div class="col-md-12 text-center">
			<h1>Create a new trail</h1>
		</div>
		<div class="col-md-6 col-xs-8">
			<form action="/trails" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<label for="name">Name of Trail</label>
					<input class="form-control" type="text" name="trail[name]" placeholder="name">
				</div>
				<div class="form-group">
                    <label for="image">Image upload</label>
                    <input type="file" id="image" name="image" accept="image/*" required>
                </div>
				<div class="form-group">
					<label for="distance">Round Trip Distance (miles)</label>
					<input class="form-control" type="text" name="trail[distance]" placeholder="distance">
				</div>
				<div class="form-group">
					<label for="elevation">Elevation Gain (feet)</label>
					<input class="form-control" type="text" name="trail[elevation]" placeholder="elevation">
				</div>
				<div class="form-group">
					<label for="description">Description</label>
					<input class="form-control" type="text" name="trail[description]" placeholder="description">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block"> Submit </button>
				</div>
				<a href="/trails">Go Back</a>
			</form>
		</div>	
	</div>

<% include ../partials/footer %>