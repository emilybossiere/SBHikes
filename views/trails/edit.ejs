<% include ../partials/header %>

	<div class="row justify-content-center">
		<div class="col-md-12 text-center">
			<h1>Edit <%= trail.name %></h1>
		</div>
		<div class="col-md-6 col-xs-8">
			<form action="/trails/<%= trail._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
				<div class="form-group">
					<label for="name">Name of Trail</label>
					<input class="form-control" type="text" name="trail[name]" value="<%= trail.name %>">
				</div>
				<div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
				<div class="form-group">
					<label for="distance">Round Trip Distance (miles)</label>
					<input class="form-control" type="text" name="trail[distance]" value="<%= trail.distance %>">
				</div>
				<div class="form-group">
					<label for="elevation">Elevation Gain (feet)</label>
					<input class="form-control" type="text" name="trail[elevation]" value="<%= trail.elevation %>">
				</div>
				<div class="form-group">
					<label for="description">Description</label>
					<input class="form-control" type="text" name="trail[description]" value="<%= trail.description %>">
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block"> Submit </button>
				</div>
				<a href="/trails">Go Back</a>
			</form>
		</div>	
	</div>

<% include ../partials/footer %>